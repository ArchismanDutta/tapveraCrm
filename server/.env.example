# ==============================================
# CRITICAL: AWS DEPLOYMENT SETTINGS
# ==============================================
# For AWS Elastic Beanstalk deployment, set PORT=8081
# For local development, use PORT=5000
PORT=5000

# ==============================================
# DATABASE CONFIGURATION (REQUIRED)
# ==============================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# ==============================================
# SECURITY (REQUIRED)
# ==============================================
JWT_SECRET=your_jwt_secret_here

# ==============================================
# FRONTEND URL (REQUIRED FOR PRODUCTION)
# ==============================================
# CRITICAL: Set this to your production domain for AWS deployment
# DO NOT use localhost in production
# Example: https://yourdomain.com
FRONTEND_URL=http://localhost:5173

# Optional: Additional frontend origin for CORS
FRONTEND_ORIGIN=

# ==============================================
# NODE ENVIRONMENT
# ==============================================
# Set to "production" for AWS deployment
NODE_ENV=development

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_gmail_app_password

# ==============================================
# GMAIL API (Optional - for enhanced email features)
# ==============================================
GMAIL_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your_google_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_REDIRECT_URI=https://yourdomain.com/auth/google/callback

# ==============================================
# WHATSAPP INTEGRATION (Optional)
# ==============================================
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
ADMIN_NUMBERS=phone1,phone2

# ==============================================
# ENCRYPTION (for per-user email passwords)
# ==============================================
ENCRYPTION_KEY=your_32_character_encryption_key
ENCRYPTION_IV=your_32_character_encryption_iv

# ==============================================
# GOOGLE SERVICE ACCOUNT (for Sheets API)
# ==============================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/sheets/callback
GOOGLE_PROJECT_ID=your_project_id
GOOGLE_PRIVATE_KEY_ID=your_private_key_id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# ==============================================
# AWS S3 CONFIGURATION (Optional - for file uploads)
# ==============================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your_bucket_name

# ==============================================
# AI ANALYTICS (Optional - for attendance insights)
# ==============================================
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=google/gemma-2-9b-it:free